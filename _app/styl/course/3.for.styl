#for
	padding 50px 0 0
.for-item
	padding-top: 50px
	position relative
	padding-bottom: 40px
	&-img
		position: absolute
		display: block
		top 0
		right 0
		background-image: linear-gradient(to right,#fff 10%,transparent 50%)
		width 100%
		max-width 700px
		z-index -1
	&-info
		padding: 40px 60px 40px 20px
		background-color:rgba(255,255,255,0.9);
		box-shadow: 0px 4px 26.68px 2.32px rgba(9,78,162,0.49);
		width: 100%
		max-width: 730px;
		&-list
			margin-left: 10px
			li
				margin-bottom: 20px;
				position relative
				padding-left: 20px
				list-style none
				&:before
					content: ''
					display block
					position: absolute
					top 9px
					left 0
					border-radius: 50px
					background-color: #000
					width 9px
					height 9px
				&:last-child
					margin-bottom: 0