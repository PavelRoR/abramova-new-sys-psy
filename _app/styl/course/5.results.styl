#results
	padding 25px 0 50px
.results-item
	padding: 30px 400px 30px 30px;
	box-shadow: 0px 4px 26.68px 2.32px 	rgba(25,24,21,0.51);
	background-image: linear-gradient(to right,#fff 20%, transparent 60%),url("../img/images/day-img-1.jpg");
	background-position: center right -350px;
	background-repeat: no-repeat;
	margin-bottom: 40px
	&-list
		margin-left: 20px
		li
			margin-bottom: 20px
			font-family: GBk
			font-size: 22
			span
				font-family: G
				font-size: 18px
			&:last-child
				margin-bottom: 0
.button-revs
	margin-top: 40px
.diploma
	text-align: center
	margin-bottom: 40px
	&-link
		display: inline-block
		box-shadow: 0px 4px 16.68px 2.32px rgba(9,78,162,0.29)
	&-img
		display block
		margin 0 auto
		width 100%
		height 186px
		object-fit: cover
		object-fit: center