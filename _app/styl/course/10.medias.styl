@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.contact
		font-size: 18px
	.adv-item
		max-width 100%
	.results-item
		padding 30px 600px 30px 30px
	#text-revs img.text-rev-img
		height 377px
@media screen and (max-width 1199px)
	header
		padding 15px 0
	.header-logo
		width 100px
		height 44px
		float: none
		margin 0 auto 3px
		display block
	.contacts
		text-align: center
		float: none
	.contact
		line-height: 1.3
		background-size: 30px
	.contact.contact-email
	.contact.contact-skype
	.contact.contact-tel
		padding-left: 30px
	.pre
		margin-bottom: 10px
	.main-title
		width 100%
		max-width 670px
		margin-left: auto
		margin-right: auto
	.adv-item
		height 292px
	.day
		max-width 700px
	.program-container
		padding 45px 320px 45px 45px
		background-image: linear-gradient(to right,#fff 65%,transparent 100%),url("../img/images/program-img.jpg")
	.results-item
		background-position bottom right -350px
	#text-revs img.text-rev-img
		height 256px
@media screen and (max-width 991px)
	.adv-item
		height 242px
		max-width 350px
	.for-item
		box-shadow: 0px 4px 26.68px 2.32px rgba(9,78,162,0.49);
		padding 0
		background-color: rgba(255,255,255,0.9)
		margin-bottom: 30px
		&-img
			position: static
			max-width 100%
		&-info
			padding 20px
			box-shadow: none
	.day
		max-width 100%
		float: none
	.day:nth-child(2n+1)
		float: none
		text-align: left
		.day-list
			padding: 5px 0
			border-right: none
			border-left: 4px solid #004da6;
	.day-sublist
		margin-left: 20px
		margin-right: 0
		li
			padding-left: 20px
			padding-right: 0
			&:before
				left 0
				right auto
	.program-container
		padding 20px
		background-image: none
	.results-item
		background-image linear-gradient(to top,rgba(255,255,255,0.9),rgba(255,255,255,0.9)),url("../img/images/day-img-1.jpg")
		background-repeat no-repeat
		background-position: center bottom
		background-size: cover
		padding 30px
	.author-container
		box-shadow: 0px 4px 26.68px 2.32px rgba(9,78,162,0.49)
		padding 0
		margin-bottom: 30px
	.author-img
		position: static
		display block
		margin 0 auto 30px
		width 100%
		height auto
	.author-info
		box-shadow: none
		background-color: transparent
		padding 0 20px 20px
	#text-revs img.text-rev-img
		height 194px
@media screen and (max-width 767px)
	.main-title
		font-size: 44px
	.carousel
		width 100%
		max-width 560px
		margin 0 auto
	#text-revs
		margin-bottom: 30px
	.diploma-example
		margin-bottom: 30px
	.diploma
		margin-bottom: 0
@media screen and (max-width 485px)
	#main
		padding 0 0 40px
	.header-logo
		width 60px
		height 31px
	.contact
		font-size: 12px
		line-height: 16px
		background-size contain
	.contact.contact-email
	.contact.contact-skype
	.contact.contact-tel
		padding-left: 17px
	.button
		padding 30px 10px
	.general-title
		font-size: 26px
		margin-bottom: 25px
	.pre
		font-size: 18px
	.main-title
		font-size: 38px
		margin-bottom: 30px
	.main-info
		font-size: 20px
		span
			font-size: 22px
	.main-info:last-of-type
		margin 10px 0 30px
	.adv-item
		height auto
		padding 40px 20px
		margin-bottom: 20px
	#advantages
	#for
	#plan
		padding-top: 30px
	.for-item-info-list
		margin-left: 0
	.day
	.results-item
		padding 20px
	.day-title
		font-size: 20px
		margin-bottom: 20px
	.day-list li
		margin-bottom: 10px
	#program
		padding 0 0 30px
	.program-table
	.program-table-row
	.program-table-cell
		display block
	.program-table-cell:first-of-type
	.program-table-cell:last-of-type
		width 100%
	.program-table-cell-head:last-of-type
		display: none
	.program-table-cell:first-of-type
		border-right: 0
	.program-table-cell-head
		margin-bottom: 0
	.program-table-cell:first-of-type
		padding 10px 0
	.table-list
		margin-top: 10px
	.program-table-cell:last-of-type
		padding 0 0 10px
		border-bottom: 2px solid #000
	.program-table-row:last-of-type .program-table-cell
		border-bottom: 0
	.table-text-duration
		text-align: left 
	.table-list li
		margin-left: 15px
	#prices
		padding 30px 0
		margin-bottom: 5px
	.prices-title span
		font-size: 44px
	.prepayment-title
		margin 30px 0 10px
		font-size: 32px
	.author-img
		margin-bottom: 20px
	.author-info-title
		font-size: 20px
		margin-bottom: 20px
	.author-info-list li
		margin-bottom: 15px
	#revs
		padding 30px 0
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 16px
		p
			font-size: 12px
	.soc-buttons a
		margin 10px 5px
	.diploma-img
		height 100px
@media screen and (max-width 385px)
	.general-title
		font-size: 24px
	#text-revs img.text-rev-img
		height 100px
	.button-wrapper::before
		width 81%
	.main-title
		font-size: 27px
		margin-bottom: 20px
	.adv-item
		padding 30px 15px
	.for-item-info-list li
	.author-info-list li
		margin-bottom: 10px
	.for-item-info
	.day, .results-item
		padding 15px
	.day-title
	.author-info-title
		font-size: 18px
	.day-list li
		padding-left: 10px
	.day-7
		.day-title
			word-wrap: break-word
	.prices-title
		font-size: 22px
		span
			font-size: 32px
	.prepayment-title
		font-size: 28px
	.prepayment-text
		font-size: 18px
	.button-revs
		margin-top: 30px
	.diploma-img
		height 70px