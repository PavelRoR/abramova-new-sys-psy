*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: G
	color #000
	background-color #fff
	line-height: 1.33
a
	color: #000
	&:focus
		outline: 0
		text-decoration: none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #fff
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.general-title
	text-align: center
	text-transform: uppercase
	font-size: 30px
	margin-bottom: 30px
	font-family: GBk
.button
	display block
	text-align: center
	font-family: GBk
	text-transform: uppercase;
	color #fff
	box-shadow: 0px 4px 19.11px 1.89px rgba(180, 18, 135, 0.65);
	padding 38px 10px
	border-radius: 50px
	background-color: #256ec7
	background-image linear-gradient(90deg, #256ec7, #094ea2)
	transition: all .4s ease
	width 100%
	cursor pointer
	position relative
	z-index 9
	&:focus
		background-color: #256ec7
		background-image linear-gradient(90deg, #256ec7, #094ea2)
		color #fff
	&:hover
		border-color: #fff
		background-color: #256ec7
		background-image linear-gradient(270deg, #256ec7, #094ea2)
		color #fff
		transform: translateY(5px)
		box-shadow: 0px 4px 12px 1px rgba(180, 18, 135, 0.6);
	&-wrapper
		margin 0 auto
		position relative
		width 100%
		max-width: 387px;
		&:before
			content: ''
			display block
			position: absolute
			left 0
			right 0
			margin 0 auto
			bottom: -4px
			border-radius: 47px
			height 50px
			background-color: #0a3161
			transition: all .4s ease
			width 90%
			z-index -1
	&-2
		display block
		text-align: center
		font-family: GBd
		color: #fff
		text-transform: uppercase
		width: 190px;
		padding 18px 10px
		border-radius: 5px
		background-color: #004DA6
		border 1px solid rgb(9, 78, 162);
		transition: all .3s ease
		&:hover
			background-color: transparent
			color #004DA6