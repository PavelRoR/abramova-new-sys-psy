header
	padding 5px 0
	overflow hidden
	margin-bottom: 15px
.header-logo
	float left
	width 140px
	height 62px
	background-image url(../img/images/logo.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
.contacts
	text-align: right
	float: right
	// padding 10px 0
.contact
	display: inline-block
	line-height: 54px
	color #fff
	margin-left: 5px
	background-repeat no-repeat
	background-position: left center
	&&-tel
		padding-left: 40px
		background-image url(../img/icons/tube.png)
		&:first-of-type
			margin-left: 0
	&&-skype
		padding-left: 44px
		background-image url(../img/icons/skype.png)
	&&-email
		padding-left: 54px
		background-image url(../img/icons/envelope.png)
	&:focus
		color #fff
	&:hover
		text-decoration: underline
		color #fff