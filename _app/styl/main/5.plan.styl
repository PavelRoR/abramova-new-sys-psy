#plan
	padding 50px 0 25px
.day
	padding 30px 400px 30px 30px
	box-shadow: 0px 4px 26.68px 2.32px rgba(#191815, 0.51);
	background-repeat no-repeat
	margin-bottom: 30px
	&-1
		background-image linear-gradient(to right, 	#fff 20%, transparent 60%), url('../img/images/day-img-1.jpg')
		background-position: center right -350px
	&-2
		background-image linear-gradient(to right, 	#fff 30%, transparent 60%), url('../img/images/day-img-2.jpg')
		background-position: center right -350px
	&-3
		background-image linear-gradient(to right, 	#fff 40%, transparent 60%), url('../img/images/day-img-3.jpg')
		background-position: center right -238px
	&-title
		font-size: 25px
		font-family: GBk
		margin-bottom: 30px
		text-transform: uppercase
	&-list
		margin-bottom: 30px
		li
			list-style: none
			margin-bottom: 5px
	&-bonus
		span 
			font-family: GBd
			text-transform: uppercase