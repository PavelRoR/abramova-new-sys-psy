#for
	padding 25px 0 50px
.for-item
	position relative
	z-index 9
	padding-top: 45px
	&-2
		margin 45px 0
		.for-item-info
			float: right
	&-img
		position: absolute
		width 100%
		height 100%
		background-repeat no-repeat
		background-size: 645px
		z-index -1
		&-1
			background-image url('../img/images/for-img-1.jpg')
			background-position: top right
			top 0
			right 0
		&-2
			background-image url('../img/images/for-img-2.jpg')
			background-position: center left
			top 0
			left 0
			height 430px
	&-info
		padding 30px 25px
		background-color: rgba(255,255,255,.8)
		width 630px
		box-shadow: 0px 4px 26.68px 2.32px rgba(9, 78, 162, 0.49);
	&-list
		// margin-left: 25px
		border-left: 4px solid #004DA6
		li
			margin-bottom: 20px
			padding-left: 20px
			list-style none
			&:last-child
				margin-bottom: 0
.button-for
	margin-top: 45px