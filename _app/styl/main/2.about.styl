#about
	padding 50px 0 25px
.about-item
	width 100%
	max-width 370px
	margin 0 auto 45px
	box-shadow: 0px 4px 26.68px 2.32px rgba(9, 78, 162, 0.49);
	background-color: rgba(255,255,255,.8)
	padding 15px
	background-repeat no-repeat
	background-position: top 15px left 15px
	min-height 246px
	&-1
		background-image url(../img/icons/about-1.png)
		.about-item-title
			padding-left: 110px
	&-2
		background-image url(../img/icons/about-2.png)
		.about-item-title
			padding-left: 120px
	&-3
		background-image url(../img/icons/about-3.png)
		.about-item-title
			padding-left: 90px
	&-title
		font-size: 25px
		font-family: GBk
		margin-bottom: 20px
		min-height 99px
		text-transform: uppercase
.about
	margin 45px 0
	position relative
	padding-top: 45px
	&-img
		position absolute
		top 0
		right 0	
		z-index -1
		background-image linear-gradient(to right, #fff 10%, transparent 50%), url('../img/images/about-img.jpg')
		background-repeat no-repeat, no-repeat
		width 985px
		height 100%
		img
			width 100%
			position relative
			z-index 0
	&-info
		padding 40px 20px
		background-color: rgba(255,255,255,.8)
		box-shadow: 0px 4px 26.68px 2.32px rgba(9, 78, 162, 0.49);
		width 730px
		&-title
			font-size: 30px
			font-family: GBk
			margin-bottom: 30px
			text-align: center
			text-transform: uppercase
		&-list
			margin-left: 20px
			li
				font-family: GBd
				margin-bottom: 25px
				span
					font-family: G
				&:last-child
					margin-bottom: 0