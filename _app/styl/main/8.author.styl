#author
	padding 25px 0
.author-container
	position relative
	padding: 30px 0 70px

.author-img
	position: absolute
	top 0
	right 0
	z-index -1
	height 600px
	width auto
.author-info
	padding 30px 40px
	box-shadow: 0px 4px 26.68px 2.32px rgba(9, 78, 162, 0.49);
	background-color: rgba(255,255,255,.85)
	width 100%
	max-width 700px
	&-title
		font-size: 30px
		margin-bottom: 25px
		font-family: GBk
		text-transform: uppercase
	&-list
		li
			list-style: none
			margin-bottom: 25px
			&:last-child
				margin-bottom: 0
.certs
	width 100%
	max-width 600px
	margin 0 auto
.cert-img
	box-shadow: 0px 4px 16.68px 2.32px rgba(9, 78, 162, 0.29);
	display block
	margin 0 auto
	object-fit: contain
	object-fit: center
	width 100%
	height auto