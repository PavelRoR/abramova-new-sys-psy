#main
	padding 0 0 60px
	background-color: #141310
	background-image url(../img/backs/main-bg.jpg)
	background-repeat no-repeat
	background-position: top center
	background-size: cover
	text-align: center
	min-height calc(100vh - 149px)
.main-title
	font-size: 30px
	font-family: GBk
	text-transform: uppercase
	color #fff
	&&-confirm
		color #000
		margin 0 0 20px
		font-size: 25px
		&+h2
			font-family: GBd
			font-size: 22px
.main-subtitle
	color #fff
	margin 20px 0 30px
	font-size: 20px
	font-family: GBd
	&&-confirm
		font-family: G
		font-size: 20px
		color #000
		margin 20px 0
.video-wrapper-main
	max-width 560px
	box-shadow: 0px 4px 26.68px 2.32px rgba(9, 78, 162, 0.49);
.remind-main-title
	margin: 60px 0 40px
	background-color: transparent
	padding 0
	font-size: 30px
	display block
	a
		color #fff
		display: inline
		border-bottom: 2px dotted
		&:focus
			color #fff
		&:hover
			border-bottom: 0
			text-decoration: none
			color #004DA6
.remind-main-subtitle
	font-size: 24px
	margin 0
.header-confirm
	background-color: #141310
#confirm
	padding 30px 0
	min-height: calc(100vh - 124px)

.mails
{
	display:table;
	height: 100px;
	width: 100%;
	text-align: center;
	margin: 0 auto 40px;
}
.mail-cell
{
	display: table-cell;
	vertical-align: middle;
}
.mail-img
{
	width: 108px;
}
.confirm-img
{
	width: 100%;
	max-width: 770px;
	box-shadow: 0 0 15px 3px rgba(0,0,0,.05)
}
.confirm-text
{
	font-size: 20px;
	margin-bottom: 30px;
	line-height: 1.3;
}
.confirm-text:last-child
{
	margin-bottom: 0
}